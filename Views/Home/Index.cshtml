<!-- Assignments Section -->
<div class="assignments">
    <div class="assignments-content">
        <button class="close-assignments">&times;</button>
        <!-- Close Button -->
        <section class="upcoming-tasks">
            <h2>Upcoming Tasks</h2>
            <div class="task-card">
                <span class="due-tag due-tomorrow">Due Tomorrow</span>
                <h3>OOP Assignment #3</h3>
                <p>Implementation of Design Patterns</p>
            </div>
            <div class="task-card">
                <span class="due-tag due-next-week">Due Next Week</span>
                <h3>Database Quiz</h3>
                <p>Chapter 5: Normalization</p>
            </div>
        </section>
        <section class="recent-activity">
            <h2>Recent Activity</h2>
            <div class="activity-card">
                <h3>Enterprise Computing</h3>
                <p>Lab Report Submitted</p>
            </div>
        </section>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
       const assignmentButton = document.querySelector(".assignment-button");
       const assignments = document.querySelector(".assignments");
       const closeAssignments = document.querySelector(".close-assignments");

       // Open assignments panel
       assignmentButton.addEventListener("click", () => {
         assignments.classList.toggle("active");
       });

       // Close assignments panel when clicking "X"
       closeAssignments.addEventListener("click", () => {
         assignments.classList.remove("active");
       });

       // Close assignments when clicking outside
       document.addEventListener("click", (e) => {
         if (
           !assignments.contains(e.target) &&
           !assignmentButton.contains(e.target)
         ) {
           assignments.classList.remove("active");
         }
       });
     });
</script>

