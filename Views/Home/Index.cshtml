<script>
    
    // Toggle assignments panel
        document.addEventListener("DOMContentLoaded", function () {
        const assignmentButton = document.querySelector(".assignment-button");
        const assignments = document.querySelector(".assignments");

        if (assignmentButton && assignments) {
            assignmentButton.addEventListener("click", (e) => {
                e.stopPropagation(); // Prevent click from closing immediately
                assignments.classList.toggle("active");
            });

            document.addEventListener("click", (e) => {
                if (!assignments.contains(e.target) && !assignmentButton.contains(e.target)) {
                    assignments.classList.remove("active");
                }
            });
        }
    });
</script>

